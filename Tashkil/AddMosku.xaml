    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    x:Class="Tashkil.AddMosku"
    x:TypeArguments="sys:String"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
    Title="AddMosku">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />            
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="إسم المسجد"></Label>
        <TextBox Grid.Column="1" Grid.Row="0"></TextBox>
        <Label Grid.Column="0" Grid.Row="1" Content="الحلقه" ></Label>
        <Button Content="حفظ" Grid.Column="1"  Grid.Row="2" Click="Button_Click"/>
        <ComboBox Grid.Column="1"  Grid.Row="1" />

    </Grid>
</PageFunction>
